<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.user.email %></td>
        <% if product.rate_avrate == 0%>
         <td>レビューなし</td>
        <%elsif product.rate_avrate == 5%>
          <td>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>          
          </td>
        <%elsif product.rate_avrate == 4%>
          <td>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>          
          </td>

        <%elsif product.rate_avrate == 3%>
          <td>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>
          </td>

        <%elsif product.rate_avrate == 2%>
          <td>
            <i class="fas fa-star rate-good"></i>
            <i class="fas fa-star rate-good"></i>          
          </td>

        <%elsif product.rate_avrate == 1%>
          <td>
          <i class="fas fa-star rate-good"></i>
          </td>
        <%end%>
        <td></td>


        <td><%= link_to 'レビューを書く', new_product_rate_path(product) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
